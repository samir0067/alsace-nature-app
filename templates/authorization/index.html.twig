{% extends 'base.html.twig' %}

{% block title %}Authorization index{% endblock %}

{% block body %}
    <h1>Authorization index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for authorization in authorizations %}
            <tr>
                <td>{{ authorization.id }}</td>
                <td>{{ authorization.name }}</td>
                <td>{{ authorization.description }}</td>
                <td>
                    <a href="{{ path('authorization_show', {'id': authorization.id}) }}">show</a>
                    <a href="{{ path('authorization_edit', {'id': authorization.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('authorization_new') }}">Create new</a>
{% endblock %}
