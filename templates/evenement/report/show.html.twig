{% extends 'baseBack.html.twig' %}

{% block title %}Bilan {{ report.id }}{% endblock %}

{% block body %}
    <div class="row">
        <h2>Bilan de retour de l'évènement de {{ report.evenement.title }}</h2>
        <div class="buttons">
            <a href="{{ path('evenement_report_edit', {evenement:report.evenement.id, id:report.id}) }}"><button class="btn btnCreate">Modifier</button></a>
{#                 TODO: ces boutons ne fonctionnent pas! #}
{#            <a href="#"><button class="btn btnCreate">Exporter</button></a>#}
        </div>
    </div>
    <div class="container containerReportShow mt-3">
        <div class="row">
            <div class="card-columns m-3 cardReportShow">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title">Description</h5>
                    </div>
                    <div class="card-footer">
                        <p class="card-text">{{ report.reportDescrip }}</p>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title">Nombre de participants effectifs</h5>
                    </div>
                    <div class="card-footer">
                        <p class="card-text">{{ report.reportMember }}</p>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title">Temps consacré</h5>
                    </div>
                    <div class="card-footer">
                        <p class="card-text">{{ report.reportTimeSpent }}</p>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title">Image</h5>
                    </div>
                    <div class="card-footer">
                        {% if report.reportPictures %}
                            <img class="imgReport" src="{{ vich_uploader_asset(report, 'imageFile') | imagine_filter('thumb') }}" alt="img-event">
                        {% else %}
                            <p>aucune image disponible</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        <a href="{{ path('evenement_index') }}">
            <button type="button" class="btn btn-success mb-3">Retour</button>
        </a>
    </div>
{% endblock %}



